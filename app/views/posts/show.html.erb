<h2><%= @post.title %></h2>
<%= link_to "edit", edit_post_path(@post) %>
<p>A <%= @post.category %> post.</p>
<hr />
<p><%= @post.content %></p>

<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @post.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>